<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/chatLayout"
    android:clickable="true"
    android:background="@drawable/custom_chat_background"
    android:layout_height="80dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:clickable="true"
    android:background="@drawable/custom_chat_background"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/updateImageView"
            app:shapeAppearanceOverlay="@style/rounded_image"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/pp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginBottom="32dp"
            android:layout_width="250dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/updateImageView"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/updateNameTextView"
            android:text="aaaaaaa"/>

        <TextView
            android:layout_width="250dp"
            android:layout_marginStart="12dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/updateImageView"
            app:layout_constraintTop_toBottomOf="@+id/updateNameTextView"
            android:textColor="@color/gray_400"
            android:textSize="18sp"
            android:textStyle="italic"
            android:id="@+id/updateTextView"
            android:text="aaaaaaa"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>